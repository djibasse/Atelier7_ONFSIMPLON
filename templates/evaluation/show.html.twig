{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1>Evaluation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evaluation.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ evaluation.categorie }}</td>
            </tr>
            <tr>
                <th>Discipline</th>
                <td>{{ evaluation.discipline }}</td>
            </tr>
            <tr>
                <th>NoteApprenant</th>
                <td>{{ evaluation.noteApprenant }}</td>
            </tr>
            <tr>
                <th>DateEvaluation</th>
                <td>{{ evaluation.dateEvaluation ? evaluation.dateEvaluation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evaluation_index') }}">Retourner</a>

    <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}">Modifier</a>

    {{ include('evaluation/_delete_form.html.twig') }}
{% endblock %}
